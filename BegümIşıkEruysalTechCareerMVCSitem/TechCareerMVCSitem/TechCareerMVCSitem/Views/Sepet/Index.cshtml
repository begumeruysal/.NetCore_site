@model List<TechCareerMVCSitem.Models.Sepet>

@{
    ViewData["Title"] = "Sepet";
}

<h1>Sepetim</h1>

@if (Model.Count > 0)
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@item.urunAdi</h5>
                    <p class="card-text">ISBN: @item.ISBN</p>
                    <p class="card-text">Fiyat: @item.fiyat</p>
                    <a href="@Url.Action("Delete", "Sepet", new { id = item.Id })" class="btn btn-danger">Sepetten Çıkar</a>
                    <a href="@Url.Action("Details", "YeniUrun", new { id = item.Id })" class="btn btn-danger">Detay</a>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Sepetiniz boş.</p>
}

<a href="@Url.Action("Index", "YeniUrun")" class="btn btn-primary">Ürünlere Geri Dön</a>
